{
  "name": "storymode-desktop",
  "private": true,
  "version": "0.1.0",
  "description": "StoryMode editor",
  "main": "dist/main/main/main.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run build:renderer && npm run build:assets",
    "build:assets": "node scripts/copy-assets.js",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:preload": "tsc -w -p tsconfig.preload.json",
    "dev:renderer": "vite",
    "start:electron": "wait-on tcp:5173 file:dist/main/main/main.js && electron .",
  "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:start:electron\"",
  "lint": "eslint . --ext .ts,.tsx",
  "format": "prettier --write .",
  "package": "npm run build && electron-builder",
  "test": "echo No test suite configured"
  },
  "dependencies": {
    "@yuxilabs/storymode-core": "latest",
    "@yuxilabs/storymode-compiler": "latest",
    "chokidar": "^3.6.0",
    "monaco-editor": "^0.49.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.14",
    "@vitejs/plugin-react": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}
